@model List<Category>

<div class="list-group">
    @foreach (var category in Model)
    {
        @* .list-group-item.list-group-item-action bootsrap kısayol*@
        @* Asp controller ve route işlemi category.categoryId ye route eder  *@
        <a asp-controller="Product" asp-action="List" asp-route-id="@category.CategoryId"
        class="list-group-item list-group-item-action @(ViewBag.SelectecCategory == category.CategoryId.ToString())"active>@category.Name</a>
    }
</div>