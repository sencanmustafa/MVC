@model ProductViewModel


@{
    var products = Model.Products;
}

@section Categories
{
    @await Component.InvokeAsync("Categories")
}

@if(products.Count == 0)
{
    @await Html.PartialAsync("_noproduct")
}
else
{
    <div class="row">
        @foreach (var item in products)
        {
            <div class="col-md-4">
                @await Html.PartialAsync("_product",item)
            </div>
        }
    </div>
}